  
<% @books.each do |book| %>
    <div class="book">
      <div class="row">
        <div class="col-md-1">
          <p class="rank-this-week"><%=book.rank_this_week %></p>
        </div>
        <div class="col-md-9">
          <p class="title"><%= book.title%></p>
          <p class="author">by <%= book.author%></p>
          <p class="publisher">(<%= book.publisher%>)</p>
          <p class="description"><%= book.description%></p>
          <%= link_to 'See all Editorial Reviews', review_path(book) %>
        </div>
        <div class="col-md-2">
          <p class="weeks-on-list"><%=book.rank_this_week%>  weeks on list</p>
        </div>
      </div>
    </div>
  <% end %>
